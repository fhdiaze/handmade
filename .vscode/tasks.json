{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-x64",
            "type": "shell",
            "command": ".\\misc\\build.ps1",
            "args": [
                "-SourceFile", "${file}",
                "-BuildMode", "debug",
                "-Architecture", "x64"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$msCompile"]
        },
        {
            "label": "build-x86",
            "type": "shell",
            "command": ".\\misc\\build.ps1",
            "args": [
                "-SourceFile", "${file}",
                "-BuildMode", "debug",
                "-Architectur", "x86"
            ],
            "group": "build",
            "problemMatcher": ["$msCompile"]
        }
    ]
}